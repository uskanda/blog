doctype html
html
  head
    = yield_content :head
  body
    = yield_content :header
    .container.main
      .row
        .col-sm-9
          #main[role="main"]
            = yield
        .col-sm-3
          aside
            .gadget#recents
              = partial :aside_recents
            .gadget#adsense
              = partial :aside_adsense
            .gadget#tags
              = partial :aside_taglist
            .gadget#twitter
              span.title
                | ツイート
              = partial :twitter
            .gadget#archives
              = partial :aside_archive
            .gadget#amazon
              = partial :aside_amazon
    .footer
      .container
        = partial :adsense_wide
      .container
        a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/"
          img alt="クリエイティブ・コモンズ・ライセンス" style="border-width:0" src="http://i.creativecommons.org/l/by-sa/4.0/88x31.png"
        |    Some rights reserved by Yusuke Kanda 2010-2013.
        .pull-right
          | Powered by 
          a href="http://middlemanapp.com"
            | Middleman
          | , 
          a href="http://github.com"
            | Github
          | , 
          a href="https://travis-ci.org/"
            | Travis CI
          | .  
          img src="https://travis-ci.org/uskanda/blog.png?branch=master"
